<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Statistics</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/admin.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>

  <body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-dark bg-dark px-3">
      <span class="navbar-brand">Admin Panel</span>
      <div class="d-flex align-items-center ms-auto gap-2">
        <span class="text-white"
          >Welcome, <%= currentUser.username || "Admin" %></span
        >
        <a
          href="/api/v1/admin/users/profile"
          class="btn btn-outline-light btn-sm"
          >Update Info</a
        >
        <a href="/api/v1/auth/signout" class="btn btn-outline-light btn-sm"
          >Sign Out</a
        >
      </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
      <a href="/api/v1/admin/dashboard">ğŸ  Dashboard</a>
      <a href="/api/v1/admin/users">ğŸ‘¥ User Management</a>
      <a href="/api/v1/admin/projects">ğŸ“ Projects</a>
      <a href="/api/v1/admin/dictionary">ğŸ“š Dictionary</a>
      <a href="/api/v1/admin/statistics">ğŸ“ˆ Statistics</a>
    </div>

    <!-- Main Content -->
    <div class="main">
      <div class="container-fluid">
        <h2 class="mb-4">Statistics Overview</h2>

        <!-- Cards -->
        <div class="row">
          <div class="col-md-4 mb-4">
            <div class="content-placeholder text-center">
              <h5>Total Users</h5>
              <p class="fs-4 fw-bold text-primary"><%= totalUsers || 0 %></p>
            </div>
          </div>
          <div class="col-md-4 mb-4">
            <div class="content-placeholder text-center">
              <h5>Total Vocabulary</h5>
              <p class="fs-4 fw-bold text-success">
                <%= totalVocabulary || 0 %>
              </p>
            </div>
          </div>
          <div class="col-md-4 mb-4">
            <div class="content-placeholder text-center">
              <h5>Total Project</h5>
              <p class="fs-4 fw-bold text-success"><%= totalProjects || 0 %></p>
            </div>
          </div>
        </div>

        <!-- Chart -->
        <div class="content-placeholder mb-4">
          <h5 class="mb-3">Users & Vocabulary Statistics</h5>
          <canvas id="statsChart" height="100"></canvas>
        </div>
      </div>
    </div>

    <!-- Chart Script -->
    <script>
      const ctx = document.getElementById('statsChart').getContext('2d');
      const statsChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['Total Users', 'Total Vocabulary','Total Projects', 'Daily Visits'],
          datasets: [{
            label: 'Statistics',
            data: [<%= totalUsers || 0 %>, <%= totalVocabulary || 0 %>, <%= totalProjects || 0 %>],
            backgroundColor: ['#007bff', '#28a745', '#ffc107']
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } }
        }
      });
    </script>
  </body>
</html>
