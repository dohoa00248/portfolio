<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Statistics</title>

    <!-- Reset CSS -->
    <link rel="stylesheet" href="/css/reset.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- Plugin CSS (AOS) -->
    <link rel="stylesheet" href="/css/aos.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin-statistics.css" />
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-dark fixed-top custom-navbar">
      <div class="container-fluid">
        <span class="navbar-brand">Admin Panel</span>
        <div class="d-flex align-items-center gap-2">
          <span class="text-white"
            >Welcome, <%= currentUser.username || "Admin" %></span
          >
          <a
            href="/api/v1/admin/users/profile"
            class="btn btn-outline-light btn-sm"
            >Update Info</a
          >
          <a href="/api/v1/auth/signout" class="btn btn-outline-light btn-sm"
            >Sign Out</a
          >
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <nav
          id="sidebarMenu"
          class="col-md-3 col-lg-2 d-md-block sidebar collapse pt-5 custom-sidebar"
        >
          <div class="position-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/admin/dashboard"
                  >üè† Dashboard</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/admin/users"
                  >üë• User Management</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/admin/projects"
                  >üìÅ Projects</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/admin/dictionary"
                  >üìö Dictionary</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/api/v1/admin/statistics"
                  >üìà Statistics</a
                >
              </li>
            </ul>
          </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-5">
          <div class="pt-3">
            <h2>Statistics Overview</h2>

            <!-- Stats Cards -->
            <div class="row my-4">
              <div class="col-md-4">
                <div class="card text-center shadow-sm custom-card">
                  <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="fs-4 fw-bold text-primary mb-0">
                      <%= totalUsers || 0 %>
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card text-center shadow-sm custom-card">
                  <div class="card-body">
                    <h5 class="card-title">Total Vocabulary</h5>
                    <p class="fs-4 fw-bold text-success mb-0">
                      <%= totalVocabulary || 0 %>
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card text-center shadow-sm custom-card">
                  <div class="card-body">
                    <h5 class="card-title">Total Projects</h5>
                    <p class="fs-4 fw-bold text-warning mb-0">
                      <%= totalProjects || 0 %>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Statistics Chart -->
            <div class="card mb-4 custom-card">
              <div class="card-header">Users | Vocabulary | Projects</div>
              <div class="card-body">
                <canvas id="statsChart" height="100"></canvas>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Chart JS -->
    <script src="/js/chart.js"></script>
    <script>
      const ctx = document.getElementById('statsChart').getContext('2d');
      const statsChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['Total Users', 'Total Vocabulary', 'Total Projects'],
          datasets: [{
            label: 'Statistics',
            data: [<%= totalUsers || 0 %>, <%= totalVocabulary || 0 %>, <%= totalProjects || 0 %>],
            backgroundColor: ['#007bff', '#28a745', '#ffc107']
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } }
        }
      });
    </script>

    <!-- Bootstrap JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
