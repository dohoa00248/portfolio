<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit User</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <div class="container py-5">
      <h2 class="mb-4 text-center text-primary">ğŸ“ Edit User Information</h2>

      <form
        action="/api/v1/admin/users/<%= userById._id %>?_method=PUT"
        method="POST"
        class="border p-4 rounded bg-white shadow-sm mx-auto"
        style="max-width: 600px;"
      >
        <!-- Username -->
        <div class="mb-3">
          <label class="form-label">Username</label>
          <input
            type="text"
            name="username"
            class="form-control"
            value="<%= userById.username %>"
            required
          />
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            type="email"
            name="email"
            class="form-control"
            value="<%= userById.email %>"
            required
          />
        </div>

        <!-- First Name -->
        <div class="mb-3">
          <label class="form-label">First Name</label>
          <input
            type="text"
            name="firstName"
            class="form-control"
            value="<%= userById.firstName %>"
            required
          />
        </div>

        <!-- Last Name -->
        <div class="mb-3">
          <label class="form-label">Last Name</label>
          <input
            type="text"
            name="lastName"
            class="form-control"
            value="<%= userById.lastName %>"
            required
          />
        </div>

        <!-- Role: show only for SuperAdmin and Admin -->
        <% if (currentUser.role === 0 || currentUser.role === 1) { %>
        <div class="mb-3">
          <label class="form-label">Role</label>
          <select name="role" class="form-select">
            <% if (currentUser.role === 0) { %>
            <!-- SuperAdmin sees all -->
            <option value="0" <%= userById.role === 0 ? 'selected' : '' %>>Super Admin</option>
            <% } %>
            <option value="1" <%= userById.role === 1 ? 'selected' : '' %>>Admin</option>
            <option value="2" <%= userById.role === 2 ? 'selected' : '' %>>User</option>
            <option value="3" <%= userById.role === 3 ? 'selected' : '' %>>Guest</option>
          </select>
        </div>
        <% } %>

        <!-- Buttons -->
        <div class="d-flex justify-content-between">
          <a href="/api/v1/admin/users" class="btn btn-secondary">â¬…ï¸ Back</a>
          <button type="submit" class="btn btn-primary">ğŸ’¾ Update User</button>
        </div>
      </form>
    </div>
  </body>
</html>
