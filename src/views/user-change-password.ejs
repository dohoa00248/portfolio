<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change Password</title>

    <!-- Reset CSS -->
    <link rel="stylesheet" href="/css/reset.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- Plugin CSS (AOS) -->
    <link rel="stylesheet" href="/css/aos.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin-dashboard.css" />
  </head>

  <body>
    <div
      class="container d-flex justify-content-center align-items-center min-vh-100"
    >
      <div class="card p-4 shadow-sm change-password-card">
        <h5
          class="mb-4 text-center fw-semibold text-dark change-password-title"
        >
          Change Password
        </h5>

        <form
          method="POST"
          action="/api/v1/user/change-password"
          class="change-password-form"
        >
          <!-- Current Password -->
          <div class="mb-3">
            <label
              for="currentPassword"
              class="form-label small text-muted change-password-label"
            >
              Current Password
            </label>
            <div class="input-group">
              <input
                type="password"
                class="form-control change-password-input"
                id="currentPassword"
                name="currentPassword"
                required
              />
              <button
                type="button"
                class="btn btn-link text-muted toggle-password-btn small"
                data-target="currentPassword"
              >
                Show
              </button>
            </div>
          </div>

          <!-- New Password -->
          <div class="mb-3">
            <label
              for="newPassword"
              class="form-label small text-muted change-password-label"
            >
              New Password
            </label>
            <div class="input-group">
              <input
                type="password"
                class="form-control change-password-input"
                id="newPassword"
                name="newPassword"
                required
              />
              <button
                type="button"
                class="btn btn-link text-muted toggle-password-btn small"
                data-target="newPassword"
              >
                Show
              </button>
            </div>
          </div>

          <button
            type="submit"
            class="btn btn-primary w-100 mt-3 change-password-submit-btn"
          >
            Change Password
          </button>
        </form>
        <button type="button" onclick="history.back()">Back</button>
      </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>

    <script>
      document.querySelectorAll('.toggle-password-btn').forEach((button) => {
        button.addEventListener('click', () => {
          const targetId = button.getAttribute('data-target');
          const input = document.getElementById(targetId);
          if (input.type === 'password') {
            input.type = 'text';
            button.textContent = 'Hide';
          } else {
            input.type = 'password';
            button.textContent = 'Show';
          }
        });
      });
    </script>
  </body>
</html>
