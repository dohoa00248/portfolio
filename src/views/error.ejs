<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error</title>

    <!-- Reset CSS -->
    <link rel="stylesheet" href="/css/reset.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- Plugin CSS (AOS) -->
    <link rel="stylesheet" href="/css/aos.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/error.css" />
  </head>

  <body>
    <div class="container py-5">
      <div class="text-center error-page-container">
        <h1 class="text-danger error-page-title">⚠️ Error</h1>
        <% if (typeof message !== 'undefined' && message) { %>
        <p class="lead error-page-message"><%= message %></p>
        <% } else { %>
        <p class="lead error-page-message">An unexpected error occurred.</p>
        <% } %> <% if (typeof error !== 'undefined' && error && error.message) {
        %>
        <pre class="text-muted error-page-detail"><%= error.message %></pre>
        <% } %>

        <a href="/" class="btn btn-primary mt-3 error-page-home-btn">
          ⬅️ Back to Home
        </a>
      </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
