<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create User</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <div class="container py-5">
      <h2 class="mb-4 text-center text-primary">â• Create New User</h2>

      <form
        action="/api/v1/admin/users"
        method="POST"
        class="border p-4 rounded bg-white shadow-sm mx-auto"
        style="max-width: 600px"
      >
        <!-- Username -->
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          />
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" />
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
        </div>

        <!-- Role -->
        <% if (currentUser && currentUser.role === 0) { %>
        <!-- SuperAdmin: can create all roles -->
        <div class="mb-3">
          <label for="role" class="form-label">Role</label>
          <select class="form-select" id="role" name="role">
            <option value="0">Super Admin</option>
            <option value="1">Admin</option>
            <option value="2" selected>User</option>
            <option value="3">Guest</option>
          </select>
        </div>
        <% } else if (currentUser && currentUser.role === 1) { %>
        <!-- Admin: cannot create SuperAdmin -->
        <div class="mb-3">
          <label for="role" class="form-label">Role</label>
          <select class="form-select" id="role" name="role">
            <option value="1">Admin</option>
            <option value="2" selected>User</option>
            <option value="3">Guest</option>
          </select>
        </div>
        <% } else { %>
        <!-- Other: hidden input default User -->
        <input type="hidden" name="role" value="2" />
        <% } %>

        <!-- Buttons -->
        <div class="d-flex justify-content-between">
          <a href="/api/v1/admin/users" class="btn btn-secondary">â¬…ï¸ Back</a>
          <button type="submit" class="btn btn-primary">ğŸ’¾ Create User</button>
        </div>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
