      <div class="row g-4">
        <% dataList.forEach(project => { %>
        <div class="col-md-4">
          <div
            class="card h-100 shadow-sm my-card"
            data-aos="zoom-in"
            data-aos-duration="800"
          >
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-primary fw-bold">
                <%= project.title %>
              </h5>

              <p class="mb-2">
                <span class="fw-semibold text-dark">Tech:</span>
                <span class="text-muted"><%= project.tech %></span>
              </p>

