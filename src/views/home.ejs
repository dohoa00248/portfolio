                <span class="fw-semibold text-dark">Description:</span>
                <% if (Array.isArray(project.description)) { %>
                <ul class="ps-3 mb-0 mt-1">
                  <% project.description.forEach(desc => { %>
                  <li><%= desc %></li>
                  <% }) %>
                </ul>
                <% } else { %>
                <p class="text-muted mt-1 mb-0"><%= project.description %></p>
                <% } %>
              </div>
            </div>

            <div
              class="card-footer bg-transparent border-top-0 d-flex justify-content-start gap-3"
            >
