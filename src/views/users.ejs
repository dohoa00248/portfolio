<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Panel</title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/aos.css" />
    <link rel="stylesheet" href="/css/users.css" />
  </head>
  <body>
    <div class="a-page">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
        <div class="container-fluid">
          <button class="btn btn-outline-dark" type="button" id="sidebarToggle">
            ‚ò∞
          </button>
          <a class="navbar-brand" href="#">User Panel</a>
          <div
            class="ms-auto d-flex align-items-center gap-3 position-relative"
          >
            <div class="fw-semibold d-none d-sm-block">
              Welcome, <%= currentUser.username %>
            </div>
            <div class="dropdown">
              <button
                class="btn btn-outline-dark btn-sm dropdown-toggle"
                type="button"
                data-bs-toggle="dropdown"
              >
                Account
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <a class="dropdown-item" href="/api/v1/user/profile"
                    >Update Info</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/api/v1/user/change-password"
                    >Change Password</a
                  >
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <form
                    action="/api/v1/auth/signout"
                    method="POST"
                    class="mb-0"
                  >
                    <button type="submit" class="dropdown-item">
                      Sign Out
                    </button>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <div class="container-fluid">
        <div class="row">
          <!-- Sidebar -->
          <nav id="sidebarMenu" class="col-lg-2 p-1 sidebar-custom">
            <h5 class="mb-3">User Menu</h5>
            <ul class="nav flex-column px-3 pt-3">
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/user/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/user/profile">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/user/blog">My Blog</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/user/settings">Settings</a>
              </li>
            </ul>
          </nav>

          <!-- Main Content -->
          <main
            id="mainContent"
            class="col-lg-10 ms-auto px-4 pt-4 main-custom"
          >
            <div class="pt-3">
              <h2>Dictionary Manager</h2>

              <!-- Add New Word Card -->
              <div class="card mb-4 custom-card">
                <div class="card-header">Add New Word</div>
                <div class="card-body">
                  <form
                    action="/api/v1/user/dictionary"
                    method="POST"
                    class="row g-3"
                  >
                    <div class="col-md-4">
                      <input
                        type="text"
                        name="word"
                        class="form-control"
                        placeholder="Word"
                        required
                      />
                    </div>
                    <div class="col-md-4">
                      <input
                        type="text"
                        name="pronunciation"
                        class="form-control"
                        placeholder="Pronunciation"
                      />
                    </div>
                    <div class="col-md-4">
                      <select name="partOfSpeech" class="form-select" required>
                        <option value="">Select Part of Speech</option>
                        <option>noun</option>
                        <option>verb</option>
                        <option>adjective</option>
                        <option>adverb</option>
                        <option>preposition</option>
                        <option>conjunction</option>
                        <option>interjection</option>
                        <option>pronoun</option>
                        <option>determiner</option>
                      </select>
                    </div>
                    <div class="col-md-6">
                      <input
                        type="text"
                        name="meaning"
                        class="form-control"
                        placeholder="Meaning"
                        required
                      />
                    </div>
                    <div class="col-md-6">
                      <input
                        type="text"
                        name="examples"
                        class="form-control"
                        placeholder="Examples (comma separated)"
                      />
                    </div>
                    <div class="col-12 text-end">
                      <button type="submit" class="btn btn-primary">
                        ‚ûï Add Word
                      </button>
                    </div>
                  </form>
                </div>
              </div>

              <!-- Import Excel Card -->
              <div class="card mb-4 custom-card">
                <div class="card-header">Import Vocabulary from Excel</div>
                <div class="card-body">
                  <form
                    action="/api/v1/user/dictionary/import-excel"
                    method="POST"
                    enctype="multipart/form-data"
                    class="row g-3"
                  >
                    <div class="col-md-8">
                      <input
                        type="file"
                        name="file"
                        class="form-control"
                        accept=".xlsx,.xls"
                        required
                      />
                    </div>
                    <div class="col-md-4">
                      <button type="submit" class="btn btn-success w-100">
                        üì§ Upload File
                      </button>
                    </div>
                  </form>
                </div>
              </div>

              <!-- Search Form -->
              <form
                action="/api/v1/user/dashboard"
                method="get"
                class="d-flex mb-4"
              >
                <input
                  type="text"
                  name="search"
                  value="<%= search || '' %>"
                  class="form-control me-2"
                  placeholder="Search vocabulary"
                />
                <button type="submit" class="btn btn-primary">üîç Search</button>
              </form>

              <!-- Vocabulary Table Card -->
              <div class="card mb-4 custom-card">
                <div class="card-header">
                  Vocabularies (<%= totalVocabularies %>)
                </div>
                <div class="card-body">
                  <a
                    href="/api/v1/user/dashboard"
                    class="btn btn-secondary mb-3"
                    >üîÑ Reload List</a
                  >
                  <a
                    href="/api/v1/user/dictionary/export-excel"
                    class="btn btn-success mb-3 ms-2"
                    >üì• Export to Excel</a
                  >
                  <% if (vocabularies.length === 0) { %>
                  <p class="text-muted">No entries found.</p>
                  <% } else { %>
                  <div class="table-responsive">
                    <table
                      class="table table-bordered table-hover custom-table align-middle"
                    >
                      <thead class="table-dark">
                        <tr>
                          <th>#</th>
                          <th>Word</th>
                          <th>Pronunciation</th>
                          <th>Part of Speech</th>
                          <th>Meaning</th>
                          <th>Examples</th>
                          <th>createdAt</th>
                          <th>updatedAt</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% vocabularies.forEach((vocab, index) => { %>
                        <tr>
                          <td><%= index + 1 + (currentPage - 1) * 10 %></td>
                          <td><%= vocab.word %></td>
                          <td><%= vocab.pronunciation %></td>
                          <td><%= vocab.partOfSpeech %></td>
                          <td><%= vocab.meaning %></td>

                          <td>
                            <% if (Array.isArray(vocab.examples)) { %>
                            <ul class="mb-0 ps-3">
                              <% vocab.examples.forEach(ex => { %>
                              <li><%= ex %></li>
                              <% }) %>
                            </ul>
                            <% } else { %> <%= vocab.examples %> <% } %>
                          </td>
                          <td>
                            <%= new
                            Date(vocab.createdAt).toLocaleDateString('vi-VN') %>
                          </td>
                          <td>
                            <%= new
                            Date(vocab.updatedAt).toLocaleDateString('vi-VN') %>
                          </td>
                          <td>
                            <div class="btn-group btn-group-sm" role="group">
                              <a
                                href="/api/v1/user/dictionary/<%= vocab._id %>"
                                class="btn btn-primary"
                                title="Edit"
                                >‚úèÔ∏è</a
                              >
                              <form
                                action="/api/v1/user/dictionary/<%= vocab._id %>?_method=DELETE"
                                method="post"
                                onsubmit="return confirm('Are you sure?');"
                              >
                                <button
                                  type="submit"
                                  class="btn btn-danger"
                                  title="Delete"
                                >
                                  üóëÔ∏è
                                </button>
                              </form>
                            </div>
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>

                  <!-- Pagination -->
                  <nav aria-label="Vocabulary pagination">
                    <ul class="pagination justify-content-center">
                      <% if (currentPage > 1) { %>
                      <li class="page-item">
                        <a
                          class="page-link"
                          href="?page=<%= currentPage - 1 %>&search=<%= search %>"
                          >Previous</a
                        >
                      </li>
                      <% } else { %>
                      <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                      </li>
                      <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
                      <li
                        class="page-item <%= currentPage === i ? 'active' : '' %>"
                      >
                        <a
                          class="page-link"
                          href="?page=<%= i %>&search=<%= search %>"
                          ><%= i %></a
                        >
                      </li>
                      <% } %> <% if (currentPage < totalPages) { %>
                      <li class="page-item">
                        <a
                          class="page-link"
                          href="?page=<%= currentPage + 1 %>&search=<%= search %>"
                          >Next</a
                        >
                      </li>
                      <% } else { %>
                      <li class="page-item disabled">
                        <span class="page-link">Next</span>
                      </li>
                      <% } %>
                    </ul>
                  </nav>
                  <% } %>
                </div>
              </div>
            </div>
          </main>
        </div>
      </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/chart.js"></script>
    <script src="/js/users.js"></script>
  </body>
</html>
