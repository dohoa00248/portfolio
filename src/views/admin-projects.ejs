<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/admin.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-dark bg-dark px-3">
      <span class="navbar-brand">Admin Panel</span>
      <div class="d-flex align-items-center ms-auto gap-2">
        <span class="text-white">
          Welcome, <%= currentUser.username || "Admin" %>
        </span>
        <a
          href="/api/v1/admin/users/profile"
          class="btn btn-outline-light btn-sm"
          >Update Info</a
        >
        <a href="/api/v1/auth/signout" class="btn btn-outline-light btn-sm"
          >Sign Out</a
        >
      </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
      <a href="/api/v1/admin/dashboard">ğŸ  Dashboard</a>
      <a href="/api/v1/admin/users">ğŸ‘¥ User Management</a>
      <a href="/api/v1/admin/projects">ğŸ“ Projects</a>
      <a href="/api/v1/admin/dictionary">ğŸ“š Dictionary</a>
      <a href="/api/v1/admin/statistics">ğŸ“ˆ Statistics</a>
    </div>

    <!-- Main Content -->
    <div class="main">
      <div class="container-fluid">
        <h2 class="mb-4">ğŸ“ Project Management</h2>
        <!-- Add Project Form -->
        <div class="content-placeholder">
          <h5 class="mb-3">Add New Project</h5>
          <form action="/api/v1/admin/projects" method="post">
            <div class="row g-3">
              <div class="col-md-4">
                <input
                  type="text"
                  name="title"
                  class="form-control"
                  placeholder="Title"
                  required
                />
              </div>
              <div class="col-md-3">
                <input
                  type="text"
                  name="tech"
                  class="form-control"
                  placeholder="Tech Stack"
                  required
                />
              </div>
              <div class="col-md-5">
                <input
                  type="text"
                  name="description"
                  class="form-control"
                  placeholder="Description"
                  required
                />
              </div>
              <div class="col-md-4">
                <input
                  type="text"
                  name="live"
                  class="form-control"
                  placeholder="Live URL"
                />
              </div>
              <div class="col-md-4">
                <input
                  type="url"
                  name="github"
                  class="form-control"
                  placeholder="Github URL"
                  required
                />
              </div>
              <div class="col-md-4 d-grid">
                <button type="submit" class="btn btn-primary">
                  â• Add Project
                </button>
              </div>
            </div>
          </form>
        </div>
        <!-- Load List -->

        <!-- Projects Table -->
        <div class="content-placeholder">
          <h5 class="mb-3">Project List</h5>
          <div class="text-end mb-2">
            <a href="/api/v1/admin/projects" class="btn btn-secondary btn-sm">
              ğŸ”„ Load Full List
            </a>
          </div>
          <% if (projects.length === 0) { %>
          <p class="text-muted">No projects found.</p>
          <% } else { %>
          <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
              <thead class="table-dark">
                <tr>
                  <th>#</th>
                  <th>Title</th>
                  <th>Tech Stack</th>
                  <th>Description</th>
                  <th>Live</th>
                  <th>Github</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% projects.forEach((project, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= project.title %></td>
                  <td><%= project.tech %></td>
                  <td>
                    <span
                      class="d-inline-block text-truncate"
                      style="max-width: 200px"
                      title="<%= project.description %>"
                    >
                      <%= project.description.length > 60 ?
                      project.description.slice(0, 60) + '...' :
                      project.description %>
                    </span>
                  </td>
                  <td>
                    <a href="<%= project.live %>" target="_blank">ğŸ”— Live</a>
                  </td>
                  <td>
                    <a href="<%= project.github %>" target="_blank"
                      >ğŸ“ Github</a
                    >
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <a
                        href="/api/v1/admin/projects/<%= project._id %>"
                        class="btn btn-sm btn-primary"
                        title="Edit"
                        >âœï¸ Edit</a
                      >
                      <form
                        action="/api/v1/admin/projects/<%= project._id %>?_method=DELETE"
                        method="post"
                        onsubmit="return confirm('Are you sure to delete this project?');"
                        style="display: inline"
                      >
                        <button
                          type="submit"
                          class="btn btn-sm btn-danger"
                          title="Delete"
                        >
                          ğŸ—‘ï¸ Delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
