<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vocabularies - Admin</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container mt-4">
      <h1>User Vocabularies</h1>
      <% if (vocabularies.length === 0) { %>
      <div class="alert alert-info">No vocabularies found for this user.</div>
      <% } else { %>
      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th>Word</th>
            <th>Meaning</th>
            <th>Part of Speech</th>
            <th>Pronunciation</th>
            <th>Example</th>
            <th>Created At</th>
            <th>Updated At</th>
          </tr>
        </thead>
        <tbody>
          <% vocabularies.forEach(vocab => { %>
          <tr>
            <td><%= vocab.word %></td>
            <td><%= vocab.meaning %></td>
            <td><%= vocab.partOfSpeech %></td>
            <td><%= vocab.pronunciation %></td>
            <td><%= vocab.examples && vocab.examples[0] %></td>
            <td><%= vocab.createdAt.toLocaleDateString() %></td>
            <td><%= vocab.updatedAt.toLocaleDateString() %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>

      <a href="/api/v1/admin/users" class="btn btn-secondary mt-3"
        >Back to Dashboard</a
      >
    </div>
  </body>
</html>
