<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/admin.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>

  <body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-dark bg-dark px-3">
      <span class="navbar-brand">Admin Panel</span>
      <div class="d-flex align-items-center ms-auto gap-2">
        <span class="text-white"
          >Welcome, <%= currentUser.username || "Admin" %></span
        >
        <a
          href="/api/v1/admin/users/profile"
          class="btn btn-outline-light btn-sm"
          >Update Info</a
        >
        <a href="/api/v1/auth/signout" class="btn btn-outline-light btn-sm"
          >Sign Out</a
        >
      </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
      <a href="/api/v1/admin/dashboard">üè† Dashboard</a>
      <a href="/api/v1/admin/users">üë• User Management</a>
      <a href="/api/v1/admin/projects">üìÅ Projects</a>
      <a href="/api/v1/admin/dictionary">üìö Dictionary</a>
      <a href="/api/v1/admin/statistics">üìà Statistics</a>
    </div>

    <!-- Main Content -->
    <div class="main">
      <div class="container-fluid">
        <h2 class="mb-4">Dashboard Overview</h2>

        <!-- Stats cards -->
        <div class="row">
          <div class="col-md-4 mb-4">
            <div class="content-placeholder text-center">
              <h5>Total Users</h5>
              <p class="fs-4 fw-bold text-primary"><%= totalUsers || 0 %></p>
            </div>
          </div>
          <div class="col-md-4 mb-4">
            <div class="content-placeholder text-center">
              <h5>Total Vocabulary</h5>
              <p class="fs-4 fw-bold text-success">
                <%= totalVocabulary || 0 %>
              </p>
            </div>
          </div>
          <div class="col-md-4 mb-4">
            <div class="content-placeholder text-center">
              <h5>Total Project</h5>
              <p class="fs-4 fw-bold text-success"><%= totalProjects || 0 %></p>
            </div>
          </div>
        </div>

        <!-- Chart -->
        <div class="content-placeholder mb-4">
          <h5 class="mb-3">Statistics Chart</h5>
          <canvas id="statsChart" height="100"></canvas>
        </div>

        <!-- User Table -->
        <div class="content-placeholder">
          <h5 class="mb-3">User List</h5>
          <% if (users.length === 0) { %>
          <p class="text-muted">No users found.</p>
          <% } else { %>
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead class="table-dark">
                <tr>
                  <th>#</th>
                  <th>Username</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach((user, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= user.username %></td>
                  <td><%= user.email %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Chart Script -->
    <script>
      const ctx = document.getElementById('statsChart').getContext('2d');
      const statsChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['Total Users', 'Total Vocabulary','Total Projects'],
          datasets: [{
            label: 'Statistics',
            data: [<%= totalUsers || 0 %>, <%= totalVocabulary || 0 %>, <%= totalProjects || 0 %>],
            backgroundColor: ['#007bff', '#28a745', '#ffc107']
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } }
        }
      });
    </script>
  </body>
</html>
