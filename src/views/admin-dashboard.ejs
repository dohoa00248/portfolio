<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Dashboard</title>

    <!-- Reset CSS -->
    <link rel="stylesheet" href="/css/reset.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- AOS Animation CSS -->
    <link rel="stylesheet" href="/css/aos.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin-dashboard.css" />
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top navbar-custom">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Admin Panel</a>

        <!-- Toggle Button for mobile sidebar -->
        <button
          class="btn btn-outline-light d-lg-none"
          type="button"
          id="sidebarToggle"
        >
          ‚ò∞
        </button>

        <!-- Welcome + Account Menu -->
        <div class="ms-auto d-flex align-items-center gap-3 position-relative">
          <div class="text-white fw-semibold d-none d-sm-block">
            Welcome, <%= currentUser.username %>
          </div>

          <!-- Account Button -->
          <button
            id="accountToggle"
            class="btn btn-outline-light btn-sm account-toggle"
            style="min-width: 90px"
          >
            Account
          </button>

          <!-- Custom Menu -->
          <div
            class="account-menu position-absolute"
            id="accountMenu"
            style="display: none"
          >
            <a class="dropdown-item" href="/api/v1/admin/users/profile">
              Update Info
            </a>
            <form action="/api/v1/auth/signout" method="POST" class="mb-0">
              <button type="submit" class="dropdown-item">Sign Out</button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <!-- Sidebar -->
    <nav
      id="sidebarMenu"
      class="sidebar-custom sidebar-fixed sidebar-slide d-lg-block"
    >
      <ul class="nav flex-column px-3 pt-4">
        <li class="nav-item">
          <a class="nav-link" href="/api/v1/admin/dashboard">üè† Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/api/v1/admin/users">üë• User Management</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/api/v1/admin/projects">üìÅ Projects</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/api/v1/admin/dictionary">üìö Dictionary</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/api/v1/admin/statistics">üìà Statistics</a>
        </li>
      </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content-fixed">
      <div class="container-fluid pt-5">
        <h2 class="mb-4 pt-4">Dashboard Overview</h2>

        <!-- Stats Cards -->
        <div class="row stats-cards mb-4">
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title fw-bold">Total Users</h5>
                <p class="card-text fs-4"><%= totalUsers %></p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title fw-bold">Dictionaries</h5>
                <p class="card-text fs-4"><%= totalVocabulary %></p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title fw-bold">Project</h5>
                <p class="card-text fs-4"><%= totalProjects %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Chart -->
        <div class="card mb-4 chart-card">
          <div class="card-header">Statistics Chart</div>
          <div class="card-body">
            <canvas id="statsChart" height="100"></canvas>
          </div>
        </div>

        <!-- User Table -->
        <div class="card mb-4 user-table">
          <div class="card-header">User List</div>
          <div class="card-body">
            <% if (users.length === 0) { %>
            <p class="text-muted">No users found.</p>
            <% } else { %>
            <div class="table-responsive">
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Email</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach((user, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <!-- JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/chart.js"></script>
    <script src="/js/admin-dashboard.js"></script>
    <!-- ChartJS -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const ctx = document.getElementById('statsChart')?.getContext('2d');
        if (ctx) {
          new Chart(ctx, {
            type: 'bar',
            data: {
              labels: ['Total Users', 'Total Vocabulary', 'Total Projects'],
              datasets: [{
                label: 'Statistics',
                data: [<%= totalUsers || 0 %>, <%= totalVocabulary || 0 %>, <%= totalProjects || 0 %>],
                backgroundColor: ['#007bff', '#28a745', '#ffc107'],
              }]
            },
            options: {
              responsive: true,
              plugins: {
                legend: { display: false }
              }
            }
          });
        }
      });
    </script>
  </body>
</html>
