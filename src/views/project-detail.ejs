<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Project</title>

    <!-- Reset CSS -->
    <link rel="stylesheet" href="/css/reset.css" />
    <!-- Framework CSS (Bootstrap) -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/project-detail.css" />

    <style>
      body {
        background-color: #f8f9fa;
      }
      .card {
        max-width: 720px;
        margin: 80px auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="card">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white">
          <h5 class="card-title mb-0">‚úèÔ∏è Edit Project</h5>
        </div>

        <!-- Card Body -->
        <div class="card-body">
          <form
            action="/api/v1/admin/projects/<%= project._id %>?_method=PUT"
            method="post"
          >
            <div class="mb-3">
              <label class="form-label fw-bold">Title</label>
              <input
                type="text"
                class="form-control"
                name="title"
                value="<%= project.title %>"
                required
              />
            </div>

            <div class="mb-3">
              <label class="form-label fw-bold">Tech Stack</label>
              <input
                type="text"
                class="form-control"
                name="tech"
                value="<%= project.tech %>"
                required
              />
            </div>

            <div class="mb-3">
              <label class="form-label fw-bold">Description</label>
              <textarea
                class="form-control"
                name="description"
                rows="3"
                required
              ><%= project.description ? project.description.join('\n') : '' %></textarea>
            </div>

            <div class="mb-3">
              <label class="form-label fw-bold">Live URL</label>
              <input
                type="text"
                class="form-control"
                name="live"
                value="<%= project.live %>"
              />
            </div>

            <div class="mb-3">
              <label class="form-label fw-bold">Github URL</label>
              <input
                type="url"
                class="form-control"
                name="github"
                value="<%= project.github %>"
                required
              />
            </div>
        </div>

        <!-- Card Footer -->
        <div class="card-footer d-flex justify-content-between">
          <a href="/api/v1/admin/projects" class="btn btn-secondary">
            ‚Üê Back
          </a>
          <button type="submit" class="btn btn-primary">
            üíæ Update Project
          </button>
        </div>
          </form>
      </div>
    </div>

    <!-- Framework JS (Bootstrap) -->
    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
