<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-dark bg-dark px-3">
      <span class="navbar-brand">Admin Panel</span>
      <div class="d-flex align-items-center ms-auto gap-2">
        <span class="text-white">
          Welcome, <%= currentUser.username || "Admin" %>
        </span>
        <a
          href="/api/v1/admin/users/profile"
          class="btn btn-outline-light btn-sm"
          >Update Info</a
        >
        <a href="/api/v1/auth/signout" class="btn btn-outline-light btn-sm"
          >Sign Out</a
        >
      </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
      <a href="/api/v1/admin/dashboard">ğŸ  Dashboard</a>
      <a href="/api/v1/admin/users">ğŸ‘¥ User Management</a>
      <a href="/api/v1/admin/projects">ğŸ“ Projects</a>
      <a href="/api/v1/admin/dictionary">ğŸ“š Dictionary</a>
      <a href="/api/v1/admin/statistics">ğŸ“ˆ Statistics</a>
    </div>

    <!-- Main Content -->
    <div class="main">
      <div class="container-fluid">
        <h2 class="mb-4">ğŸ‘¥ Users Management</h2>

        <!-- Add User -->
        <div class="content-placeholder">
          <h5>Add New User</h5>
          <a
            href="/api/v1/admin/users/create"
            class="btn btn-success btn-sm mb-3"
            >â• Add User</a
          >
        </div>

        <!-- Search -->
        <form action="/api/v1/admin/users" method="get" class="d-flex mb-4">
          <input
            type="text"
            name="search"
            value="<%= search %>"
            class="form-control me-2"
            placeholder="Search username or email"
          />
          <button type="submit" class="btn btn-primary">ğŸ” Search</button>
        </form>
        <div class="text-end mt-3">
          <a href="/api/v1/admin/users" class="btn btn-secondary">
            ğŸ”„ Reload List
          </a>
        </div>
        <!-- User List -->
        <div class="content-placeholder">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="mb-3">Users (<%= totalUsers %>)</h5>
          </div>

          <% if (users.length === 0) { %>
          <p class="text-muted">No users found.</p>
          <% } else { %>

          <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
              <thead class="table-dark">
                <tr>
                  <th>#</th>
                  <th>Username</th>
                  <th>Email</th>
                  <th>First name</th>
                  <th>Last name</th>
                  <th>Created</th>
                  <th>Updated</th>
                  <th>Role</th>
                  <th>Actions</th>
                  <th>Change Password</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach((user, index) => { %>
                <tr>
                  <td><%= index + 1 + (currentPage - 1) * 10 %></td>
                  <td><%= user.username %></td>
                  <td>
                    <span
                      class="d-inline-block text-truncate"
                      style="max-width: 100px"
                      title="<%= user.email %>"
                    >
                      <%= user.email %>
                    </span>
                  </td>
                  <td><%= user.firstName %></td>
                  <td><%= user.lastName %></td>
                  <td>
                    <%= new Date(user.createdAt).toLocaleDateString('vi-VN') %>
                  </td>
                  <td>
                    <%= new Date(user.updatedAt).toLocaleDateString('vi-VN') %>
                  </td>
                  <td>
                    <% if (user.role === 0) { %>
                    <span class="badge bg-danger">Super Admin</span>
                    <% } else if (user.role === 1) { %>
                    <span class="badge bg-primary">Admin</span>
                    <% } else if (user.role === 2) { %>
                    <span class="badge bg-success">User</span>
                    <% } else if (user.role === 3) { %>
                    <span class="badge bg-secondary">Guest</span>
                    <% } else { %>
                    <span class="badge bg-dark">Unknown</span>
                    <% } %>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <a
                        href="/api/v1/admin/users/<%= user._id %>"
                        class="btn btn-sm btn-primary"
                        title="Edit"
                      >
                        âœï¸ Edit
                      </a>
                      <form
                        action="/api/v1/admin/users/<%= user._id %>?_method=DELETE"
                        method="post"
                        style="display: inline"
                        onsubmit="return confirm('Are you sure to delete this user?');"
                      >
                        <button
                          type="submit"
                          class="btn btn-sm btn-danger"
                          title="Delete"
                        >
                          ğŸ—‘ï¸ Delete
                        </button>
                      </form>
                    </div>
                  </td>
                  <td>
                    <a
                      href="/api/v1/admin/users/<%= user._id %>/change-password"
                      class="btn btn-sm btn-warning"
                      title="Change Password"
                    >
                      ğŸ”‘ Pass
                    </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <nav aria-label="User pagination">
            <ul class="pagination justify-content-center">
              <% if (currentPage > 1) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %>"
                  >Previous</a
                >
              </li>
              <% } else { %>
              <li class="page-item disabled">
                <span class="page-link">Previous</span>
              </li>
              <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
              <% } %> <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage + 1 %>"
                  >Next</a
                >
              </li>
              <% } else { %>
              <li class="page-item disabled">
                <span class="page-link">Next</span>
              </li>
              <% } %>
            </ul>
          </nav>

          <% } %>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
