<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Users Management</title>

    <!-- Reset CSS -->
    <link rel="stylesheet" href="/css/reset.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- Plugin CSS (AOS) -->
    <link rel="stylesheet" href="/css/aos.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin-users.css" />
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-dark fixed-top custom-navbar">
      <div class="container-fluid">
        <button
          class="navbar-toggler d-md-none"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#sidebarMenu"
          aria-controls="sidebarMenu"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <span class="navbar-brand">Admin Panel</span>
        <div class="d-flex align-items-center gap-2">
          <span class="text-white">
            Welcome, <%= currentUser.username %> (<%= currentUser.firstName %>
            <%= currentUser.lastName %>)
          </span>
          <a
            href="/api/v1/admin/users/profile"
            class="btn btn-outline-light btn-sm"
          >
            Update Info
          </a>
          <form action="/api/v1/auth/signout" method="POST">
            <button type="submit" class="btn btn-outline-light btn-sm">
              Sign Out
            </button>
          </form>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <nav
          id="sidebarMenu"
          class="col-md-3 col-lg-2 d-md-block sidebar collapse pt-5 custom-sidebar"
        >
          <div class="position-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/admin/dashboard"
                  >üè† Dashboard</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/api/v1/admin/users"
                  >üë• User Management</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/admin/projects"
                  >üìÅ Projects</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/admin/dictionary"
                  >üìö Dictionary</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/v1/admin/statistics"
                  >üìà Statistics</a
                >
              </li>
            </ul>
          </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-5">
          <div class="pt-3">
            <h2>Users Management</h2>

            <!-- Add User -->
            <div class="my-3">
              <a
                href="/api/v1/admin/users/create"
                class="btn btn-success btn-sm"
                >‚ûï Add User</a
              >
            </div>

            <!-- Search Form -->
            <form action="/api/v1/admin/users" method="get" class="d-flex mb-4">
              <input
                type="text"
                name="search"
                value="<%= search || '' %>"
                class="form-control me-2"
                placeholder="Search username or email"
              />
              <button type="submit" class="btn btn-primary">üîç Search</button>
            </form>

            <!-- User Table Card -->
            <div class="card mb-4 custom-card">
              <div class="card-header">User List (<%= totalUsers %>)</div>
              <div class="card-body">
                <a href="/api/v1/admin/users" class="btn btn-secondary mb-3"
                  >üîÑ Reload List</a
                >
                <% if (users.length === 0) { %>
                <p class="text-muted">No users found.</p>
                <% } else { %>
                <div class="table-responsive">
                  <table
                    class="table table-bordered table-hover custom-table align-middle"
                  >
                    <thead class="table-dark">
                      <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Created</th>
                        <th>Updated</th>
                        <th>Role</th>
                        <th>Actions</th>
                        <th>Password</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach((user, index) => { %>
                      <tr>
                        <td><%= index + 1 + (currentPage - 1) * 10 %></td>
                        <td><%= user.username %></td>
                        <td>
                          <span
                            class="d-inline-block text-truncate"
                            style="max-width: 150px"
                            title="<%= user.email %>"
                          >
                            <%= user.email %>
                          </span>
                        </td>
                        <td><%= user.firstName %></td>
                        <td><%= user.lastName %></td>
                        <td>
                          <%= new
                          Date(user.createdAt).toLocaleDateString('vi-VN') %>
                        </td>
                        <td>
                          <%= new
                          Date(user.updatedAt).toLocaleDateString('vi-VN') %>
                        </td>
                        <td>
                          <% if (user.role === 0) { %>
                          <span class="badge bg-danger">Super Admin</span>
                          <% } else if (user.role === 1) { %>
                          <span class="badge bg-primary">Admin</span>
                          <% } else if (user.role === 2) { %>
                          <span class="badge bg-success">User</span>
                          <% } else if (user.role === 3) { %>
                          <span class="badge bg-secondary">Guest</span>
                          <% } else { %>
                          <span class="badge bg-dark">Unknown</span>
                          <% } %>
                        </td>
                        <td>
                          <div class="btn-group btn-group-sm" role="group">
                            <a
                              href="/api/v1/admin/users/<%= user._id %>"
                              class="btn btn-primary"
                              title="Edit"
                              >‚úèÔ∏è</a
                            >
                            <a
                              href="/api/v1/admin/users/<%= user._id %>/vocabularies"
                              class="btn btn-sm btn-primary"
                              >Vocabularies</a
                            >
                            <form
                              action="/api/v1/admin/users/<%= user._id %>?_method=DELETE"
                              method="post"
                              onsubmit="return confirm('Are you sure to delete this user?');"
                            >
                              <button
                                type="submit"
                                class="btn btn-danger"
                                title="Delete"
                              >
                                üóëÔ∏è
                              </button>
                            </form>
                          </div>
                        </td>
                        <td>
                          <a
                            href="/api/v1/admin/users/<%= user._id %>/change-password"
                            class="btn btn-warning btn-sm"
                            title="Change Password"
                          >
                            üîë
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="User pagination">
                  <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage - 1 %>"
                        >Previous</a
                      >
                    </li>
                    <% } else { %>
                    <li class="page-item disabled">
                      <span class="page-link">Previous</span>
                    </li>
                    <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
                    <li
                      class="page-item <%= currentPage === i ? 'active' : '' %>"
                    >
                      <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                    <% } %> <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage + 1 %>"
                        >Next</a
                      >
                    </li>
                    <% } else { %>
                    <li class="page-item disabled">
                      <span class="page-link">Next</span>
                    </li>
                    <% } %>
                  </ul>
                </nav>
                <% } %>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
